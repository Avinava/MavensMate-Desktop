{
  "name": "mavensmate-app",
  "version": "0.0.1",
  "main": "main.js",
  "scripts": {
    "dev": "electron ./app",

    "clean": "rm -rf ../dist",
    "clean:osx": "rm -rf ../dist/osx",
    "clean:win": "rm -rf ../dist/win",

    "build": "npm run clean && npm run build:osx && npm run build:win",
    "build:osx": "npm run clean:osx && electron-packager ./ \"MavensMate\" --out=../dist/osx --platform=darwin --arch=x64 --version=0.25.3 --icon=../assets/icon.icns",
    "build:win": "npm run clean:win && electron-packager ./ \"MavensMate\" --out=../dist/win --platform=win32 --arch=ia32 --version=0.25.3 --icon=../assets/icon.ico",

    "pack": "npm run pack:osx && npm run pack:win",
    "pack:osx": "npm run build:osx && electron-builder \"../dist/osx/MavensMate-darwin-x64/MavensMate.app\" --platform=osx --out=\"../dist/osx\" --config=../packager.json",
    "pack:win": "npm run build:win && electron-builder \"../dist/win/MavensMate-win32-ia32\" --platform=win --out=\"../dist/win\" --config=../packager.json"
  },
  "dependencies": {
    "electron-packager": "^4.0.2",
    "electron-prebuilt": "^0.25.2",
    "electron-builder": "^1.0.0",
    "mavensmate":"0.0.38-beta7"
  }
}
